@import "mixins"
@import "images"
.page-contacts {
  background: url("data:image/png;base64,") repeat scroll 0 0 #000000;
  height: 100%;
}

#contact_info 
	height 100%
	padding 2rem 0;
	figure 
		float: left;
		position: relative;
		&:before
			bottom: 17px;
			box-shadow: 0 15px 7px rgba(0, 0, 0, 0.7);
			content: "";
			height: 20%;
			left: 10px;
			position: absolute;
			right: auto;
			transform: rotate(-3deg);
			width: 50%;	
			z-index: -1;
	#map_canvas
		border-bottom: 1px solid #FFFFFF
		width 600px
		height 400px
		background white
	figcaption
		background: none repeat scroll 0 0 #C95039;
		color: #FFFFFF;
		display: block;
		left: 0;
		padding: 10px 20px;
		position: absolute;
		top: 0;
	.contacts
		font-size: 16px;
		padding: 0 10px 0 650px;
		li
			padding: 10px 0;
	@media screen and (max-width: 900px)
		.contacts
			padding-left: 420px;
		#map_canvas
			width 400px
	@media screen and (max-width: 610px)
		.contacts
			padding-left: 310px;
			font-size 0.875rem
		#map_canvas
			width 300px
	@media screen and (max-width: 480px)
		.contacts
			padding 25rem 2rem
			h2 
				display none
		#map_canvas
			width 400px
			position: relative
			z-index 1000
	@media screen and (max-width: 400px)
		.map_canvas-block
			display none
		.contacts
			padding 0 2rem
			margin-top -2rem
	@media screen and (max-height: 500px)
		.map_canvas-block
			display none
		.contacts
			padding 0 2rem
			margin-top -2rem