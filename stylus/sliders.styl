@import "mixins"
@import "images"
/*----------- isoSlider -----------------*/
.iosSlider 
	sliderHeight = 26.25rem
	position: relative;
	top: 0;
	left: 0; 
	overflow:hidden
	width: 100%;
	height: sliderHeight
	padding: 0.8rem 0
	margin-bottom: 3rem
	background: color-black
	&:before
	&:after
		content	""
		display block		
		height 100%
		position absolute
		top 0		
		background rgba(0, 0, 0, .35)
		z-index 10
	&:before
		left 0
		width 28%

	&:after
		right 0
		width 27%
	.slider 
		width: 100%;
		height: 100%;
		margin-left: -17%
		.slide 
			float: left;
			width: 45%;
			height: sliderHeight
			position: relative
			img
				height 100%
				position: absolute
				top 0
				left 0
				transition 2s 
			&:hover img
				height 110%
				top:-5%
				left:-5%				
				bottom:5%
			.iosDescription
				position absolute
				bottom 0
				left 0
				width 96%
				background rgba(color-red, .75)
				padding 0 2%
				color white
				.titleBottom 
				h3
					font-size 1em
					line-height 40px			
					text-transform uppercase
					font-family: 'Oswald', sans-serif;
					font-weight: 700			
				.desc
					height 0px		
				.desc
				.titleBottom
					transition 2s
			&:hover	
				.titleBottom 
					line-height 50px
				.desc
					height 370px
	
					
			
	.navigation
		cursor: pointer
		position:absolute
		top:50%		
		z-index: 100
		background rgba(black, 0.5)
		display: block
		border-radius: 50%
		width w = 80px
		height w
		margin-top -0.5*w
		&:hover
			background rgba(black, 0.6)
	shift = 50%
	.prev
		right: shift
		margin-right 0.6*shift
		background-image BG-slideshowArrowBackward
		&:hover		
			background-image BG-slideshowArrowBackward
	.next		
		left: shift
		margin-left 0.6*shift
		background-image BG-slideshowArrowForward
		&:hover
			background-image BG-slideshowArrowForward
	@media screen and (max-width: 1000px)
		.titleBottom 
		h3
			font-size 0.9em!important
	@media screen and (max-width: 920px)
		&:before
		&:after
			display none			
		.titleBottom 
		h3
			font-size 1em!important	
		.slider 
			margin-left: 0
			.slide 
				width: 100%
				.iosDescription
					z-index 1000
					padding: 0 paddings=6%
					width: 100% - 2*paddings
		.navigation
			background: none no-repeat scroll 0 0 rgba(0, 0, 0, 0.5);
			border-radius: 0 0 0 0;
			background-position: 50% 50%
			cursor: pointer;
			display: block;
			height: 100%;
			margin-top: 0;
			position: absolute;
			top: 0;
			width: 6%;
			z-index: 100;
			&:hover
				background rgba(black, 0.6) no-repeat
				background-position: 50% 50%

		.prev
			left: 0
			margin-right 0
			background-image BG-slideshowArrowBackward
			&:hover		
				background-image BG-slideshowArrowBackward
		.next		
			right: 0
			left auto
			margin-left 0
			background-image BG-slideshowArrowForward
			&:hover
				background-image BG-slideshowArrowForward
@media screen and (max-width: 400px)
	.iosSlider 
		display none

@media screen and (max-height: 700px)
	.iosSlider 
		display none
 /*------------ /isoSlider -------------*/