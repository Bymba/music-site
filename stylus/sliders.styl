@import "mixins"
@import "images"
/*----------- isoSlider -----------------*/
.main-slider
	.iosSlider 
		sliderHeight = 26.25rem
		position: relative;
		top: 0;
		left: 0; 
		overflow:hidden
		width: 100%;
		height: sliderHeight
		padding: 0.8rem 0
		margin-bottom: 3rem
		background: color-black
		&:before
		&:after
			content	""
			display block		
			height 100%
			position absolute
			top 0		
			background rgba(0, 0, 0, .35)
			z-index 10
		&:before
			left 0
			width 28%

		&:after
			right 0
			width 27%
		.slider 
			width: 100%;
			height: 100%;
			margin-left: -17%
			.slide 
				float: left;
				width: 45%;
				height: sliderHeight
				position: relative
				img
					height 100%
					position: absolute
					top 0
					left 0
					transition 2s 			

				@media screen and (min-width: 1740px)
					&:hover img
						height 110%
						top:-5%
						left:-5%		
				@media screen and (max-width: 1680px) 
					img
						left: -25%				
				@media screen and (max-width: 1350px)
					img
						left: -30%
				@media screen and (max-width: 1290px)
					img
						left: -35%
				@media screen and (max-width: 1290px)
					img
						left: -40%
				@media screen and (max-width: 1200px)
					img
						left: -45%
				@media screen and (max-width: 1100px)
					img
						left: -50%
				@media screen and (max-width: 1000px)
					img
						left: -55%
				@media screen and (max-width: 950px)
					img
						left: -65%
				@media screen and (max-width: 920px)
					img
						left: 0
				@media screen and (max-width: 800px)
					img
						left: -20%
				@media screen and (max-width: 630px)
					img
						left: -30%
				@media screen and (max-width: 560px)
					img
						left: -40%
				@media screen and (max-width: 500px)
					img
						left: -50%					

				.iosDescription
					position absolute
					bottom 0
					left 0
					width 96%
					background rgba(color-red, .75)
					padding 0 2%
					color white	
					.titleBottom 				
					h2
						font-family: 'Oswald', sans-serif;
						font-weight: 700	
						font-size 1.25rem
						text-align center
					h3
						font-size 0.875rem
						line-height 2.5rem			
						text-transform uppercase
						font-family: 'Oswald', sans-serif;
						font-weight: 700
						letter-spacing: 1px
					@media screen and (max-width: 1230px)
						h2
							display none				
					@media screen and (max-width: 1000px)
						h3
							line-height 1.8rem
					@media screen and (max-width: 920px)
						h2
							display block	
						h3
							line-height 2.5rem
					@media screen and (max-width: 710px)
						h3
							line-height 2rem
					@media screen and (max-width: 610px)
						h2
							display none
						h3
							line-height 1.4rem
					.desc
						height 0px	
						font-size 0.75rem				
						a
						.selection
							color: color-black	
							background white
							text-decoration none
					.desc
					.titleBottom
						transition 2s
				&:hover	
					.titleBottom 
						line-height 50px
					.desc
						height 370px				
				
		.navigation
			cursor: pointer
			position:absolute
			top:50%		
			z-index: 100
			background rgba(black, 0.5)
			display: block
			border-radius: 50%
			width w = 80px
			height w
			margin-top -0.5*w
			&:hover
				background rgba(black, 0.6)
		shift = 50%
		.prev
			right: shift
			margin-right 0.6*shift
			background-image BG-slideshowArrowBackward
			&:hover		
				background-image BG-slideshowArrowBackward
		.next		
			left: shift
			margin-left 0.6*shift
			background-image BG-slideshowArrowForward
			&:hover
				background-image BG-slideshowArrowForward
		@media screen and (max-width: 1000px)
			.titleBottom 
			h3
				font-size 0.9em!important
		@media screen and (max-width: 920px)
			&:before
			&:after
				display none			
			.titleBottom 
			h3
				font-size 1em!important	
			.slider 
				margin-left: 0
				.slide 
					width: 100%
					.iosDescription
						z-index 1000
						padding: 0 6%
						width: 76%;
						margin: 0 6%;	
			.navigation
				background: none no-repeat scroll 0 0 rgba(0, 0, 0, 0.5);
				border-radius: 0 0 0 0;
				background-position: 50% 50%
				cursor: pointer;
				display: block;
				height: 100%;
				margin-top: 0;
				position: absolute;
				top: 0;
				width: 6%;
				z-index: 100;
				&:hover
					background rgba(black, 0.6) no-repeat
					background-position: 50% 50%
			.prev
				left: 0
				margin-right 0
				background-image BG-slideshowArrowBackward
				&:hover		
					background-image BG-slideshowArrowBackward
			.next		
				right: 0
				left auto
				margin-left 0
				background-image BG-slideshowArrowForward
				&:hover
					background-image BG-slideshowArrowForward

		@media screen and (max-width: 800px)
			.slider .slide .iosDescription .desc
				height 370px
			.slider .slide .iosDescription .titleBottom
				line-height: 50px

	@media screen and (max-width: 400px)
		.iosSlider 
			display none

	@media screen and (max-height: 700px)
		.iosSlider 
			display none
	 /*------------ /isoSlider -------------*/



.experience
	margin-bottom 4rem
	.iosSliderSmal 
		position: relative;
		top: 0;
		left: 0;
		overflow: hidden;
		width: 960px;
		height: 130px;
		.slider
			width: 100%;
			height: 100%;
			position: relative
			margin-left 1.4375rem
			.slide 
				float: left;
				width: 10rem;
				margin-right: 1.3125rem
				height: 8.125rem;
		.navigation
			position: absolute
			top 12%
			display block
			width 1.4rem
			height 88%
			background color-red
			opacity: 0
			z-index 1000
			line-height 6.95rem
			text-align center
			color white		
			transition 0.8s	
		.navigation.prevSm
			left -40px			
		.navigation.nextSm
			right -40px
.iosSliderSmal:hover
	.navigation
		opacity: 0.9
	.navigation.prevSm
		left 0			
	.navigation.nextSm
		right 0


@media screen and (max-width: 1000px)
	.experience .iosSliderSmal .slider
		margin-left -5.5rem